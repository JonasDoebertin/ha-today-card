{
  "name": "ha-today-card",
  "version": "0.0.1",
  "description": "Show today's calendar schedule on your Home Assistant Lovelace Dashboard",
  "keywords": [
    "card",
    "hacs",
    "home-assistant",
    "homeassistant",
    "lovelace"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/JonasDoebertin/ha-today-card"
  },
  "license": "MIT",
  "scripts": {
    "format:check": "prettier --check .",
    "format:fix": "prettier --write .",
    "watch": "bun build ./src/index.ts --outdir ./dist --entry-naming \"ha-today-card.[ext]\" --loader .css:text --sourcemap=external --watch",
    "build": "bun build ./src/index.ts --outdir ./dist --entry-naming \"ha-today-card.[ext]\" --loader .css:text --minify"
  },
  "dependencies": {
    "custom-card-helpers": "^1.9.0",
    "dayjs": "^1.11.13",
    "home-assistant-js-websocket": "^9.4.0",
    "lit": "^3.2.1",
    "superstruct": "^2.0.2"
  },
  "devDependencies": {
    "prettier": "^3.5.2"
  }
}
